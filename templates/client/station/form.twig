<script type="text/html" id="stationForm">
    <div class="page-header">
        <h3><% if(name) { %>Edit Station<% } else { %>Add Station<% } %></h3>
    </div>
    <div class="container">
        <form class="col-md-4">
            <div class="form-group">
                <label for="st-system">System</label>
                <input type="text" id="st-system" value="<%= system %>" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="st-name">Name</label>
                <input type="text" id="st-name" value="<%= name %>" class="form-control"/>
            </div>
            <div class="col-md-8"></div>
            <button type="submit" class="btn btn-primary col-md-4"> <% if(name) { %>save<% } else { %>add<% } %></button>
        </form>
    </div>
</script>